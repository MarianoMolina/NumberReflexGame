<resources>

    <!-- Base application theme. -->
    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/background</item>
    </style>
    <style name="AppThemeNoActionBar" parent="AppThemeActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppThemeActionBarStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <!-- Light EditTexts -->
    <style name="ThemeOverlay.MyLightEditText" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="ThemeOverlay.MyTextDetail" parent="AppThemeNoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:padding">4dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ThemeOverlay.FirebaseIcon" parent="AppThemeNoActionBar">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
    <style name="ThemeOverlay.MyTitleText" parent="AppThemeNoActionBar">
        <item name="android:gravity">center</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style name="gameList" parent="AppThemeActionBar">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="gameCard" parent="AppThemeActionBar">
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="gameNumberText" parent="AppThemeActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|right</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="gameBigText" parent="AppThemeActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">80sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>
    <style name="gameSmallText" parent="AppThemeActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">22dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="BlueRoundedButtons" parent="AppThemeNoActionBar">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/round_button_main_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="mainButtons" parent="BlueRoundedButtons">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="accentButtons" parent="mainButtons">
        <item name="android:background">@drawable/round_button_accent_color</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="mainButtonsTop" parent="mainButtons">
        <item name="android:layout_marginTop">50dp</item>
    </style>
    <style name="mainButtonsGames" parent="mainButtons">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="highScoresImages" parent="AppThemeNoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="highScoresWrapper" parent="AppThemeNoActionBar">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="highScoresWrapperText" parent="AppThemeNoActionBar">
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="highScoresWrapperText.2" parent="highScoresWrapperText">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="highScoresNumber" parent="AppThemeNoActionBar">
        <item name="android:textSize">17sp</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
