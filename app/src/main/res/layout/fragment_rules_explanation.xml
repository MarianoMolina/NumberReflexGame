<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.RulesExplanationFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rulesExplanationButtons"
        android:src="@drawable/rules_1"
        android:id="@+id/rulesImageDisplayed"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/rulesExplanationButtons">
        <android.support.v7.widget.CardView
            android:id="@+id/previousRuleButton"
            style="@style/gameCard"
            android:layout_height="50dp"
            card_view:cardBackgroundColor="@color/colorPrimary"
            android:gravity="center"
            card_view:cardCornerRadius="4dp">
            <TextView
                style="@style/gameSmallText"
                android:layout_marginBottom="0dp"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:text="@string/previous"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/nextRuleButton"
            style="@style/gameCard"
            android:layout_height="50dp"
            card_view:cardBackgroundColor="@color/colorPrimaryLight"
            android:gravity="center"
            card_view:cardCornerRadius="4dp">
            <TextView
                style="@style/gameSmallText"
                android:layout_marginBottom="0dp"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:text="@string/next"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>
